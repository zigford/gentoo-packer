{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "guest_os_type": "linux",
      "headless": false,
      "iso_checksum": "sha512:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "{{ user `output_directory` }}",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_timeout": "60s",
      "ssh_username": "{{user `username`}}",
      "type": "vmware-iso",
      "vm_name": "Gentoo",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "{{user `num_cpus`}}"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=vmware",
        "SCRIPTS=/tmp",
        "ADMIN_USER={{user `admin_user`}}",
        "MAKE_OPTS={{user `make_opts`}}",
        "MARCH={{user `march`}}"
      ],
      "scripts": [
        "provision-{{user `build_type`}}-{{user `virt_type`}}-{{user `cpu_brand`}}.sh"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "SCRIPTS=/tmp",
        "EMERGE_WORLD={{user `emerge_world`}}"
      ],
      "scripts": [
        "provision-cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "admin_user": "",
    "build_type": "",
    "cpu_brand": "",
    "emerge_world": "",
    "iso_checksum": "",
    "iso_url": "",
    "make_opts": "",
