{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait5>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait5>",
        "{{user `password`}}",
        "<enter>",
        "<wait5>",
        "{{user `password`}}",
        "<enter>",
        "<wait5>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait5>"
      ],
      "boot_wait": "2s",
      "disk_size": "60000M",
      "headless": false,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_timeout": "20s",
      "ssh_username": "{{user `username`}}",
      "type": "qemu",
      "vm_name": "Gentoo",
      "cpus": "{{user `make_opts`}}"
    }
  ],
  "description": "Faithful Stage 3 Gentoo Installation (Libvirt)",
  "post-processors": [
    {
      "output": "gentoo-amd64-stage3-systemd-libvirt.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=qemu",
        "SCRIPTS=/tmp",
        "MARCH={{user `march`}}",
        "MAKE_OPTS={{user `make_opts`}}",
        "ADMIN_USER={{user `admin_user`}}"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "SCRIPTS=/tmp",
        "EMERGE_WORLD={{user `emerge_world`}}"
      ],
      "scripts": [
        "provision-cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "password": "P@ckerP@55W0rd!",
    "username": "root",
    "march": "x86-64",
    "make_opts": "2",
    "admin_user": "vagrant",
    "emerge_world": "false"
  }
}

